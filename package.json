{
  "name": "@optilo/impi-scraper",
  "version": "3.4.2",
  "description": "IMPI (Mexican trademark office) scraper with keyword search and human-like interactions",
  "module": "src/index.ts",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "default": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "bin": {
    "impi": "./cli.ts"
  },
  "files": [
    "src",
    "cli.ts",
    "README.md"
  ],
  "scripts": {
    "search": "tsx cli.ts search",
    "search:node": "node --experimental-strip-types --experimental-specifier-resolution=node cli.ts search",
    "count": "tsx cli.ts count",
    "count:node": "node --experimental-strip-types --experimental-specifier-resolution=node cli.ts count",
    "test": "vitest run src/",
    "test:watch": "vitest watch src/",
    "test:integration": "vitest run tests/ --testTimeout=180000",
    "test:search": "vitest run tests/search.integration.test.ts --testTimeout=120000",
    "test:details": "vitest run tests/details.integration.test.ts --testTimeout=180000",
    "test:proxy": "vitest run tests/proxy.integration.test.ts --testTimeout=120000",
    "example:vitrum": "tsx examples/search-vitrum.ts",
    "example:full": "tsx examples/full-details.ts",
    "typecheck": "tsc --noEmit",
    "release": "tsx scripts/release.ts",
    "release:patch": "tsx scripts/release.ts patch",
    "release:minor": "tsx scripts/release.ts minor",
    "release:major": "tsx scripts/release.ts major"
  },
  "keywords": [
    "impi",
    "trademark",
    "scraper",
    "mexico",
    "camoufox",
    "web-scraping",
    "intellectual-property",
    "brand-search"
  ],
  "author": "Optilo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/optilo/impi-scraper"
  },
  "engines": {
    "node": ">=22 <23"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "camoufox-js": "^0.8.4"
  }
}
